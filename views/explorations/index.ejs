<% layout('layouts/boilerplate')%>
<div id="cluster-map"></div>
<div class="container">
    <h1>All Explorations</h1>

    <% for (let exploration of explorations){%>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <%if(exploration.images.length) {%>
                <img crossorigin="anonymous" class="img-fluid" alt="" src="<%=exploration.images[0].url%>">
                <% }else {%>
                <img crossorigin="anonymous" class="img-fluid" alt=""
                    src="https://res.cloudinary.com/dbr070puv/image/upload/v1719310169/YelpCamp/zxmnrnm6s6niq7uturxj.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= exploration.title %> </h5>

                    <p class="card-text"><%= exploration.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= exploration.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/explorations/<%=exploration._id%>">View <%=exploration.title%></a>
                </div>
            </div>
        </div>
    </div>
    <% }%>
</div>
<script>
    const maptilerApiKey = '<%- process.env.MAPTILER_API_KEY %>';
    const explorations = {features:<%- JSON.stringify(explorations) %>}
</script>
<script src="/javascripts/clusterMap.js"></script>